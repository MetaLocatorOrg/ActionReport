{% if not isWidget %}<div piwik-content-block
                          content-title="{{ 'MetaActionReport_MetaActionReport'|translate|e('html_attr') }}">{% endif %}

{% import "ajaxMacros.twig" as ajax %}
{{ ajax.LoadingDiv('ajaxLoading') }}
<div id="transitions_report" {% if isWidget %}class="widgetBody"{% endif %} ng-controller="MetaActionSwitcherController as metaActionSwitcher">
    <div class="row"> 
        <div class="col s12 m3">
            <div piwik-field uicontrol="select" name="actionType"
                 ng-model="metaActionSwitcher.actionType"
                 data-title="{{ 'Event Action'|translate|e('html_attr') }}"
                 full-width="true"
                 value="{{ clientSideParameters.actionType }}"
                 options='metaActionSwitcher.actionTypeOptions'>
            </div>
        </div>
    </div>
    <div class="row"> 
        <div class="col s12 m3">
            <div piwik-field uicontrol="select" name="dimension1Name"
                 ng-model="metaActionSwitcher.dimension1Name"
                 data-title="{{ 'Dimension 1'|translate()|e('html_attr') }}"
                 full-width="true"
                 data-disabled="!metaActionSwitcher.isEnabled"
                 value="{{ clientSideParameters.dimension1Name }}"
                 options='metaActionSwitcher.dimensionOptions'>
            </div>
        </div>
    </div>
    <div class="row"> 
        <div class="col s12 m3">
            <div piwik-field uicontrol="select" name="dimension2Name"
                 ng-model="metaActionSwitcher.dimension2Name"
                 data-title="{{ 'Dimension 2'|translate()|e('html_attr') }}"
                 full-width="true"
                 data-disabled="!metaActionSwitcher.isEnabled"
                 value="{{ clientSideParameters.dimension2Name }}"
                 options='metaActionSwitcher.dimensionOptions'>
            </div>
        </div>
    </div>
    <div class="row"> 
        <div class="col s12 m3">
            <div piwik-field uicontrol="select" name="dimension3Name"
                 ng-model="metaActionSwitcher.dimension3Name"
                 data-title="{{ 'Dimension 3'|translate()|e('html_attr') }}"
                 full-width="true"
                 data-disabled="!metaActionSwitcher.isEnabled"
                 value="{{ clientSideParameters.dimension3Name }}"
                 options='metaActionSwitcher.dimensionOptions'>
            </div>
        </div>
    </div>

    <div piwik-activity-indicator loading="metaActionSwitcher.isLoading"></div>

    <div class="loadingPiwik" ng-show="!metaActionSwitcher.isLoading" style="display:none" id="transitions_inline_loading">
        <img src="plugins/Morpheus/images/loading-blue.gif" alt=""/> <span>{{ 'General_LoadingData'|translate }}</span>
    </div>

    <div class="popoverContainer" ng-show="!metaActionSwitcher.isLoading && metaActionSwitcher.isEnabled">

    </div>

    <div id="MetaActionReport_Error_Container" ng-show="!metaActionSwitcher.isLoading">

    </div>
    <div piwik-save-button
        class="submitMetaReport"
        onconfirm="metaActionSwitcher.submitMetaReport()"
        value="{{ 'Submit'|translate }}">
    </div>

    <div id='MetaResult'>
    </div>
</div>

{% if not isWidget %}</div>{% endif %}
